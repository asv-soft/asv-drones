<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:Asv.Avalonia;assembly=Asv.Avalonia"
             xmlns:avalonia1="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:rsga="clr-namespace:Asv.Drones.Api"
             mc:Ignorable="d"
             d:DesignWidth="250" d:DesignHeight="300"
             x:Class="Asv.Drones.Api.MavParamTextBoxView"
             x:DataType="rsga:MavParamTextBoxViewModel">
    <Design.DataContext>
        <rsga:MavParamTextBoxViewModel/>
    </Design.DataContext>
    <UserControl.Styles>
        <Style Selector="TextBox">
            <Style Selector="^:error /template/ Border#PART_BorderElement">
                <Setter Property="BorderBrush" Value="{DynamicResource AsvForegroundErrorColor}"/>
            </Style>
        </Style>
        
        <Style Selector="DataValidationErrors">
            <Setter Property="Template">
                <ControlTemplate>
                    <Panel>
                        <ContentPresenter Name="PART_ContentPresenter"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          CornerRadius="{TemplateBinding CornerRadius}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Content="{TemplateBinding Content}"
                                          Padding="{TemplateBinding Padding}"/>
                        <ContentControl HorizontalAlignment="Right"
                                        Margin="0,0,4,0"
                                        ContentTemplate="{TemplateBinding ErrorTemplate}"
                                        DataContext="{TemplateBinding Owner}"
                                        Content="{Binding (DataValidationErrors.Errors)}"
                                        IsVisible="{Binding (DataValidationErrors.HasErrors)}"/>
                        
                    </Panel>
                </ControlTemplate>
            </Setter>
            <Setter Property="ErrorTemplate">
                <DataTemplate x:DataType="{x:Type x:Object}">
                    <Canvas Width="14" Height="14" Margin="4 0 1 0" 
                            Background="Transparent">
                        <Canvas.Styles>
                            <Style Selector="ToolTip">
                                <Setter Property="Background" Value="{DynamicResource AsvForegroundErrorBrush}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource AsvForegroundErrorBrush}"/>
                            </Style>
                        </Canvas.Styles>
                        <ToolTip.Tip>
                            <ItemsControl ItemsSource="{Binding}"/>
                        </ToolTip.Tip>
                        <Path Data="M14,7 A7,7 0 0,0 0,7 M0,7 A7,7 0 1,0 14,7 M7,3l0,5 M7,9l0,2" 
                              Stroke="{DynamicResource AsvForegroundErrorBrush}" 
                              StrokeThickness="2"/>
                    </Canvas>
                </DataTemplate>
            </Setter>
        </Style>
    </UserControl.Styles>
    <Panel VerticalAlignment="Top" HorizontalAlignment="Stretch">
        <TextBox 
                 MinWidth="200" 
                 Padding="0" 
                 IsReadOnly="{Binding IsBusy}"
                 VerticalContentAlignment="Center"
                 GotFocus="PART_TextBox_OnGotFocus"
                 avalonia:NavigationHelper.IsSelected ="{Binding IsFocused, Mode=OneWay}"
                 Text="{Binding TextValue.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 MinHeight="0" Height="25">
            <TextBox.KeyBindings>
                <KeyBinding Gesture="Enter" Command="{Binding Write}" />
            </TextBox.KeyBindings>
            <ToolTip.Tip>
                <StackPanel Spacing="8">
                    <TextBlock Classes="h1" Text="{Binding Metadata.ShortDesc}"/>
                    <TextBlock Classes="description" Text="{Binding Metadata.LongDesc}"/>
                </StackPanel>
            </ToolTip.Tip>
            <TextBox.InnerLeftContent>
                <Button
                    IsEnabled="{Binding !IsBusy}"
                    TabIndex="0" IsTabStop="True" 
                        Padding="0"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Left"
                        Theme="{DynamicResource TransparentButton}" 
                        Command="{Binding Refresh}">
                    <avalonia1:MaterialIcon
                        HorizontalAlignment="Stretch"
                        Margin="4,0"
                        Width="20" Height="20" 
                        Foreground="{DynamicResource AsvForegroundInfoBrush}"
                        Kind="Sync" 
                    />
                </Button>
                
            </TextBox.InnerLeftContent>
            <TextBox.InnerRightContent>
                <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,0,4,0">
                    <Button Padding="0"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Right"
                            Theme="{DynamicResource TransparentButton}"
                            Command="{Binding Write}">
                        <Button.IsVisible>
                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                <Binding Path="!IsSync"/>
                                <Binding Path="!IsBusy"/>
                                <Binding Path="!HasValidationErrors"/>
                            </MultiBinding>
                        </Button.IsVisible>
                        <avalonia1:MaterialIcon
                            Width="20" Height="20" 
                            Kind="ContentSaveEditOutline" 
                            Foreground="{DynamicResource AsvForegroundInfoBrush}"
                        />
                    </Button>
                    <Ellipse Opacity="0" Classes.Updated="{Binding !IsRemoteChange}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="5" Height="5" Fill="{DynamicResource AsvForegroundInfo3Brush}">
                        <Ellipse.Styles>
                            <Style Selector="Ellipse.Updated">
                                <Style.Animations>
                                    <Animation Duration="0:0:1"> 
                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1.0"/>
                                        </KeyFrame>
                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="0.0"/>
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Ellipse.Styles>
                    </Ellipse>
                    <TextBlock
                        Margin="0,0,20,0"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        Theme="{DynamicResource BodyTextBlockStyle}"
                        VerticalAlignment="Center" 
                        Text="{Binding Metadata.Units}" />
                    
                </StackPanel>
            </TextBox.InnerRightContent>
            
        </TextBox>
        <ProgressBar MinWidth="0"
                     IsVisible="{Binding IsBusy}" 
                     Background="Transparent" Margin="0,0,30,0" 
                     Height="20" Opacity="0.5" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                     Minimum="0" Maximum="1"
                     IsIndeterminate="True"/>
        
        <avalonia1:MaterialIcon IsVisible="{Binding IsNetworkError}"  Kind="CloseNetwork" Foreground="{DynamicResource AsvForegroundErrorBrush}" HorizontalAlignment="Right" Margin="0,0,4,0" Width="18" Height="18">
            <ToolTip.Tip>
                <TextBlock Text="{Binding NetworkErrorMessage}"></TextBlock>
            </ToolTip.Tip>
            <avalonia1:MaterialIcon.Styles>
                <Style Selector="avalonia1|MaterialIcon">
                    <Style.Animations>
                        <Animation Duration="0:0:0.5"> 
                            <KeyFrame Cue="0%">
                                <Setter Property="Opacity" Value="0.0"/>
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="Opacity" Value="1.0"/>
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </avalonia1:MaterialIcon.Styles>
        </avalonia1:MaterialIcon>
    </Panel>
</UserControl>
