<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:gui="clr-namespace:Asv.Drones.Gui"
             xmlns:api="clr-namespace:Asv.Drones.Gui.Api;assembly=Asv.Drones.Gui.Api"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Asv.Drones.Gui.TakeOffView"
             x:CompileBindings="True"
             x:DataType="gui:TakeOffViewModel">
    <Design.DataContext>
        <gui:TakeOffViewModel />
    </Design.DataContext>
    <UserControl.Resources>
        <api:StringToDecimalConverter x:Key="AltitudeConverter"/>
    </UserControl.Resources>
    <Panel>
        <StackPanel Spacing="10" Margin="10">
            <TextBlock Text="{x:Static gui:RS.TakeOffAnchorActionViewModel_DialogDescription}" />
            <Grid ColumnDefinitions="*, Auto">
                <NumericUpDown Grid.Column="0" 
                               Focusable="True" 
                               Name="AltitudeTextBox" 
                               FormatString="0.00"
                               Increment="1"
                               Value="{Binding Altitude, Converter={StaticResource AltitudeConverter}}"
                               KeyDown="Altitude_OnKeyDown" />
                <TextBlock VerticalAlignment="Center" 
                           Margin="8 0" 
                           Grid.Column="1" 
                           Text="{Binding Units}" />
            </Grid>
        </StackPanel>
    </Panel>
</UserControl>