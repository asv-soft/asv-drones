<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:drones="clr-namespace:Asv.Drones"
    mc:Ignorable="d"
    Width="200"
    Height="140"
    x:CompileBindings="True"
    x:DataType="drones:SavePacketMessagesDialogViewModel"
    x:Class="Asv.Drones.SavePacketMessagesDialogView"
>
    <Design.DataContext>
        <drones:SavePacketMessagesDialogViewModel />
    </Design.DataContext>
    <Panel>
        <StackPanel Spacing="10" Margin="10">
            <RadioButton Content=";" IsChecked="{CompiledBinding IsSemicolon.Value, Mode=TwoWay}" />
            <RadioButton Content="," IsChecked="{CompiledBinding IsComa.Value, Mode=TwoWay}" />
            <RadioButton
                Content="{x:Static drones:RS.SavePacketMessagesDialogView_Separator_Tab}"
                IsChecked="{CompiledBinding IsTab.Value, Mode=TwoWay}"
            />
        </StackPanel>
    </Panel>
</UserControl>
