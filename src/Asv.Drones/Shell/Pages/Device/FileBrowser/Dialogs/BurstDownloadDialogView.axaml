<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:drones="clr-namespace:Asv.Drones"
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450"
    x:Class="Asv.Drones.BurstDownloadDialogView"
    x:DataType="drones:BurstDownloadDialogViewModel"
>
    <StackPanel Spacing="10" Margin="10">
        <TextBlock Text="Enter the size of a download block" />
        <!--TODO: localization-->
        <NumericUpDown
            Increment="1"
            Minimum="0"
            Maximum="239"
            AllowSpin="True"
            Value="{Binding PacketSize.Value}"
        />
    </StackPanel>
</UserControl>
